{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Coherence Receipt",
  "type": "object",
  "required": [
    "id",
    "state_summary",
    "residuals",
    "debt",
    "debt_decomposition",
    "gates",
    "actions",
    "decision",
    "parent_hash",
    "receipt_hash"
  ],
  "properties": {
    "id": { "type": "string" },
    "state_summary": { "type": "object" },
    "residuals": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "debt": { "type": "number" },
    "debt_decomposition": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "gates": {
      "type": "object",
      "required": ["hard", "soft"],
      "properties": {
        "hard": { "type": "string", "enum": ["pass", "fail"] },
        "soft": { "type": "string", "enum": ["pass", "fail"] },
        "reason": { "type": "string" }
      },
      "additionalProperties": false
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["rail", "bounds"],
        "properties": {
          "rail": { "type": "string" },
          "bounds": { "type": "object" },
          "before": {},
          "after": {}
        }
      }
    },
    "decision": { "type": "string", "enum": ["accept", "retry", "abort"] },
    "parent_hash": { "type": "string" },
    "receipt_hash": { "type": "string" },
    "timestamp": { "type": "string" }
  },
  "additionalProperties": false
}
